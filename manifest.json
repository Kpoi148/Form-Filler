{
    "manifest_version": 3,
    "name": "Keyword Auto Form Filler",
    "version": "1.0.0",
    "description": "Fill forms using user-defined keywords and profiles.",
    "author": "Luu Chi Khanh(Poi)",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/form.png",
            "48": "icons/form.png",
            "128": "icons/form.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/form.png",
        "48": "icons/form.png",
        "128": "icons/form.png"
    }
}